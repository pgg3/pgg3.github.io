source 'https://rubygems.org'

gem 'jekyll', '~> 4.3'
gem 'webrick', '~> 1.8'

# Core plugins for GitHub Pages compatibility
group :jekyll_plugins do
  gem 'jekyll-email-protect'
  gem 'jekyll-feed'
  gem 'jekyll-imagemagick'
  gem 'jekyll-minifier'
  gem 'jekyll-paginate-v2'
  gem 'jekyll-sitemap'
  gem 'jekyll-scholar'
  gem 'jemoji'
  gem 'jekyll-link-attributes'
  gem 'jekyll-toc'
end

# Development gems
group :development do
  gem 'classifier-reborn'
  gem 'css_parser'
  gem 'httparty'
end